
html, body {
  margin: 0;
  padding: 0;
  background-color: #F8F8F8;
  color: #333333;
  font-family: 'Ubuntu', sans-serif;
}

h1, h2, h3 {
  font-family: 'Kaushan Script', cursive;
  font-weight: normal;
}
h1 {
  font-size: 2rem;
  padding: .5rem 1rem 0 1rem;
  margin: 0;
}
h2 {
  font-size: 1.5rem;
  padding: 0 1rem .5rem 1rem;
  margin: 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}
h3 {
  color: #662E1C;
  font-size: 3.5rem;
  padding: 0 1rem .5rem 0;
  margin: 0;
}

a {
  text-decoration: none;
}

pre {
  margin: 2rem;
  box-shadow: .1rem .1rem .2rem #EEEEEE;

  &.no-hljs {
    box-shadow: none;
  }
}

.hljs {
  background-color: #FAFAFA;
  border: 1px solid #EEEEEE;
}

#layout {
  padding-left: 20rem;
  transition: all .5s;

  #menu {
    box-shadow: 0 0 1rem #662E1C;
    background: #AF4425;
    color: #FFFFFF;
    position: fixed;
    top: 0;
    left: 0;
    width: 20rem;
    height: 100%;
    transition: all .5s;

    #menu-toggle {
      width: 3rem;
      height: 3rem;
      margin: 0;
      padding: 0;
      top: 0;
      left: 0;
      border: none;
      text-align: center;
      position: absolute;
      margin-left: 20rem;
      background: #AF4425;
      color: #FFFFFF;
      cursor: pointer;
      outline: none;

      i {
        line-height: 3rem;
        font-size: 1.5rem;
        transition: all .5s;
      }

      &:hover {
        i {
          font-size: 2rem;
          transform: rotate(90deg);
        }
      }
    }

    a {
      display:block;
      padding: .5rem 1rem;
      color: #FFFFFF;
    }
    a:hover, a:focus {
      background: rgba(255, 255, 255, 0.1);
    }
  }

  #content {

    a {
      color: #630;
      font-family: monospace;
    }
    a:hover, a:focus {
      color: #34675C;
    }

    section {
      margin: 2rem 4rem;
      padding: 1rem 3rem;
      min-height: 10rem;
      background-color: #FFFFFF;
      border: 1px solid #EEEEEE;

      p {
        line-height: 1.5em;
        padding: 0 1rem;

        &.lead {
          font-size: 1.2em;
          font-weight: bold;
        }
      }
    }
  }

  &.no-menu {
    padding-left: 0;

    #menu {
      left: -20rem;
    }
  }
}

#layout #content section#beta-warning {
  text-align: center;
  min-height: initial;
  
  p {
    margin: 0;
    //font-family: "Courier New", Courier, monospace;
    font-weight: lighter;

    &.lead {
      color: #AF4425;
    }
  }
}

#layout #content section#about {
  text-align: center;
}
